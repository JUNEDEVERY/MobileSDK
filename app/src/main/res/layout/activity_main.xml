<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECDFFB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstNumber"
        android:layout_width="0dp"
        android:layout_height="100dp"

        app:layout_constraintEnd_toStartOf="@id/secondNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/secondNumber"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/result"
        app:layout_constraintStart_toEndOf="@id/firstNumber"
        app:layout_constraintTop_toTopOf="@+id/firstNumber"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/secondNumber"
        app:layout_constraintTop_toTopOf="@+id/secondNumber"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/white"/>


    <TableLayout
        android:id="@+id/buttontable"
        android:layout_width="match_parent"
        android:layout_height="230pt"
        android:layout_margin="10dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:padding="10dp"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:background="#E3CCFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNumber">

        <TableRow android:layout_weight="1">


            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
android:textSize="25dp"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="9" />


            <Button
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:text="="

                android:textSize="25dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="6" />

            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="+" />

        </TableRow>

        <TableRow android:layout_weight="1" >

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"

                android:text="1" />


            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="3" />

            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"

                android:text="-" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="C" />

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="0" />

            <Button
                android:id="@+id/devide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="add"
                android:textSize="25dp"
                android:text="/" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:backgroundTintMode="add"
                android:text="*"
                android:textSize="25dp" />


        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
